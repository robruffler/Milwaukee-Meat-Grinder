        <modifyDataType tableName="content" columnName="content_id" newDataType="BIGINT"/>
        <dropDefaultValue tableName="content" columnName="content_id"/>
        <rollback>
            <modifyDataType tableName="content" columnName="content_id" newDataType="INT"/>
	        <dropDefaultValue tableName="content" columnName="content_id"/>
        </rollback>				
    </changeSet>

